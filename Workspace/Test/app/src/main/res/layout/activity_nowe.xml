<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/id_nowe"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold|italic" />

    <Button
        android:layout_width="@dimen/b_szerokosc"
        android:layout_height="wrap_content"
        android:text="@string/b5_text"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="onClickMenu" />

    <Button
        android:layout_width="@dimen/b_szerokosc"
        android:layout_height="wrap_content"
        android:text="@string/b6_text"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickKsiazka" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Imie i nazwisko"
        android:id="@+id/textView3"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adres e-mail"
        android:id="@+id/textView4"
        android:layout_marginTop="5dp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_gravity="center_horizontal"
        android:autoText="false"
        android:textStyle="bold" />

    <Button
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:onClick="onClickMenu2" />

</LinearLayout>